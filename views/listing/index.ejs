<%- layout("layouts/boilerplate") %>

    <style>
        #filters{
            display:flex;
            flex-wrap:wrap;
            align-items:center;
        }
        
        .filter{
            color:black !important;
            margin-top:2rem;
            margin-right:2rem;
            text-align:center;
            opacity: 0.7;
        }

        .filter:hover{
            opacity:1;
            cursor:pointer;
        }

        .tax-toggler{
            border:1px solid black;
            height:3.25rem;
            padding:1rem;
            border-radius:1rem;
            margin-left:5rem;
            display:flex;
            align-items: center;
        }

    </style>

    <div id="filters">
        <a href="/listing/filter/Trending" class="listing-link">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                    <p>Trending</p>
            </div>
        </a>
        <a href="/listing/filter/Rooms" class="listing-link">
        <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
        </a>
        <a href="/listing/filter/Iconic-Cities" class="listing-link">
        <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </div>
        </a>
        <a href="/listing/filter/Mountains" class="listing-link">
        <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></i></div>
                <p>Mountains</p>
            </div>
        </a>
        <a href="/listing/filter/Castles" class="listing-link">
                <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
        </a>
        <a href="/listing/filter/Camping" class="listing-link">
                <div class="filter">
                <div><i class="fa-solid fa-campground"></i></i></div>
                <p>Camping</p>
            </div>
        </a>
        <a href="/listing/filter/Arctic-Pools" class="listing-link">
        <div class="filter">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic Pools</p>
            </div>
        </a>
        <a href="/listing/filter/Farms" class="listing-link">
        <div class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </div>
        </a>
        <a href="/listing/filter/vineyard" class="listing-link">
        <div class="filter">
                <div><i class="fa-solid fa-wine-glass"></i></div>
                <p>Vineyard</p>
            </div>
        </a>

        <div class="tax-toggler">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display after total Taxes</label>
            </div>
        </div>
    </div>
    <br>

    <!-- <form action="/listing/new" method="GET">
        <button>Create New Listing</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings){ %>
            
            <a href="/listing/<%=listing._id%>" class="listing-link">

                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" style="height:20rem;" alt="listing_image">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p> <b><%= listing.title %></b> <br>
                         <span class="price-toggler" data-price="<%= listing.price %>"><%= listing.price.toLocaleString("en-IN") %>&nbsp;&nbsp;&nbsp;/night</span>
                      </p>
                    </div>
                </div>
                
            </a>
        <% } %>
    </div>

    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault")

        taxSwitch.addEventListener('click',()=>{
            let priceElements = document.getElementsByClassName("price-toggler")
            
            for(elem of priceElements){
                let originalPrice = parseFloat(elem.getAttribute("data-price"))
                let currentPrice = parseFloat(elem.innerText.replace(",",""))

                if(originalPrice == currentPrice){
                    let tax = (originalPrice * 18) / 100;
                    elem.innerText = (tax + originalPrice).toLocaleString("en-IN") + "\t\t\t/night"
                }
                else{
                    elem.innerText = originalPrice.toLocaleString("en-IN") + "\t\t\t/night"
                }
            }
        })

    </script>