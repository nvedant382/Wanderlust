<%- layout("layouts/boilerplate") %>

<div class="row">
    <div class="offset-3 mt-3 mb-3">
        <h1>Login</h1>
    </div>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" novalidate class="needs-validation">
            <div>
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" placeholder="Enter Username" required>
                <div class="invalid-feedback">Enter Valid Username</div>
            </div>
    
            <div>
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" placeholder="Enter Password" required>
                <div class="invalid-feedback">Enter Valid Password</div>
            </div>

            <button class="btn btn-success mt-4">Login</button>
    
        </form>
    </div>
</div>